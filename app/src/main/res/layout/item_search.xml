<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:padding="10dp">

    <ImageView
        android:id="@+id/img_laptop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/lap_1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/img_laptop"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_laptop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Acer Nitro 5 2023 - Custom Mixi"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/price_laptop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="19.000.000"
            android:textColor="@color/black"/>

    </LinearLayout>

</RelativeLayout>